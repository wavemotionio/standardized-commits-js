{
  "name": "standardized-commits-js",
  "version": "1.0.0",
  "description": "An example of standardizing commit messages with conventional-commits, conventional-changelog, commitlint, and config-angular",
  "scripts": {
    "commit": "git-cz",
    "test": "./node_modules/.bin/eslint ./"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wavemotionio/standardized-commits-js.git"
  },
  "keywords": [
    "commitlint",
    "conventional-changelog-angular",
    "standardized-commits",
    "commitizen"
  ],
  "author": "wavemotionio",
  "license": "ISC",
  "homepage": "https://github.com/wavemotionio/standardized-commits-js#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-angular": "^7.5.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.3",
    "husky": "^1.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
