{
  "name": "standardized-commits-js",
  "version": "1.0.0",
  "description": "An example of standardizing commit messages with conventional-commits, conventional-changelog, commitlint, and config-angular",
  "scripts": {
    "c": "git-cz",
    "test": "./node_modules/.bin/eslint ./"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wavemotionio/standardized-commits-js.git"
  },
  "keywords": [
    "commitlint",
    "conventional-changelog",
    "standardized-commits",
    "commitizen"
  ],
  "author": "wavemotionio",
  "license": "ISC",
  "homepage": "https://github.com/wavemotionio/standardized-commits-js#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.2.0",
    "husky": "^2.4.1"
  }
}
